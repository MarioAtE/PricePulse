{
  "manifest_version": 3,
  "name": "PricePulse",
  "version": "1.0",
  "description": "Alerts the user when a specified price or word is found on a specific website",
  "permissions": ["activeTab", "storage", "alarms"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
