{
  "manifest_version": 3,
  "name": "PricePulse",
  "version": "1.0",
  "description": "Alerts the user when a specified price is found on https://www.onedayonly.co.za/",
  "permissions": ["activeTab", "storage", "alarms"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.onedayonly.co.za/*"],
      "js": ["content.js"]
    }
  ]
}
